pipeline {
    agent any
    stages {
        stage('DEBUG: Direct Git Clone') {
            steps {
                // This command will run directly on the agent as the jenkins user.
                // Its output will be printed directly to the console log.
                sh 'echo "--- Forcing a direct git clone to get the raw error message ---"'
                
                // We are intentionally running a command we know will fail
                // to capture its specific error message.
                sh 'git clone https://github.com/sumanthcsit/Jenkins-Zero-To-Hero'
            }
        }
    }
}